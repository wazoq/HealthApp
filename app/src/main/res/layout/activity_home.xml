                                android:layout_gravity="start|center_vertical"
                                android:src="@drawable/balanceyoga"
                                android:scaleType="centerCrop"/>

                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
